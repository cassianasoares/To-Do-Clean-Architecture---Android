<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryLight</item>
    </style>

    <style name="ItemBackground" parent="AppTheme">
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="CustomInput" parent="AppTheme">
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="BackgroundAddInput" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>